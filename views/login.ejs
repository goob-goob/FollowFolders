<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FollowFolders</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://kit.fontawesome.com/f4c2c61264.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-900 text-white">
    <header class="border-solid border-b-2 border-b-slate-300">
        <h1 class="text-5xl text-white m-4">FollowFolders - Login</h1>
        <!-- <p class="text-2xl text-white m-4"> -->
        <!-- </p> -->
    </header>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <form action="/login" method="POST" class="m-4 text-black">
        <input type="email" name="email" placeholder="Email" class="px-2 placeholder:text-black">
        <input type="password" name="password" placeholder="Password" class="px-2 placeholder:text-black">
        <!-- <input type="submit" class="px-2 rounded outline text-white hover:bg-white hover:text-gray-900"> -->
        <button type="submit" class="px-2 rounded outline text-white hover:bg-white hover:text-gray-900">Submit</button>
    </form>
    <!-- <a href="/forgot" class="m-4  hover:text-cyan-300">Forgot Password?</a> -->
</body>
</html>